{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "nvcc build active file",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/bin",
                "&&",
                "nvcc",
                "-DCUDA=1",
                "-g",
                "-G",
                "-rdc=true",
                "-lmpi",
                "-lstdc++",
                "-lm",
                "-lnccl",
                "-lcudart",
                "-lcudadevrt",
                "-I${workspaceFolder}",
                "-I/usr/lib/x86_64-linux-gnu/openmpi/include",
                "-L/usr/lib/x86_64-linux-gnu/openmpi/lib",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$nvcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: nvcc with debug flags, CUDA definitions, and MPI support"
        },{
            "label": "nvcc build with nvshmem",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/bin",
                "&&",
                "nvcc",
                "-DCUDA=1",
                "-g",
                "-G",
                "-rdc=true",
                "-lmpi",
                "-lstdc++",
                "-lm",
                "-lnvshmem_host",
                "-lnvshmem_device",
                "-lnvidia-ml",
                "-lcuda",
                "-lnccl",
                "-lcudart",
                "-lcudadevrt",
                "-I${workspaceFolder}",
                "-I/opt/nvshmem/include/",
                "-I/usr/lib/x86_64-linux-gnu/openmpi/include",
                "-L/usr/lib/x86_64-linux-gnu/openmpi/lib",        
                "-L/opt/nvshmem/lib/",
                "-Xlinker",
                "-rpath=/opt/nvshmem/lib",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$nvcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: nvcc with debug flags, CUDA definitions, and MPI support"
        },
        {
            "label": "nvcc build optimized",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/bin",
                "&&",
                "nvcc",
                "-DCUDA=1",
                "-O3",
                "-rdc=true",
                "-lmpi",
                "-lstdc++",
                "-lm",
                "-lnccl",
                "-lcudart",
                "-lcudadevrt",
                "-I${workspaceFolder}",
                "-I/usr/lib/x86_64-linux-gnu/openmpi/include",
                "-L/usr/lib/x86_64-linux-gnu/openmpi/lib",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$nvcc"],
            "group": "build",
            "detail": "Compiler: nvcc with optimizations, CUDA definitions, and MPI support"
        }
    ]
}
