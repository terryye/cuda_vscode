{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/headers/cuda13/",
                "${workspaceFolder}/headers/cuda13/cccl/",
                "${workspaceFolder}/headers/openmpi/",
                "${workspaceFolder}/headers/nvshmem13/",
                "${workspaceFolder}/headers/nccl/"
            ],
            "defines": ["__CUDACC__", "__NVCC__", "CUDA=1"],
            "forcedInclude": [
                "${workspaceFolder}/headers/cuda13/cuda_runtime.h"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64"
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/lib/x86_64-linux-gnu/openmpi/include",
                "/usr/local/cuda/include",
                "/usr/local/cuda-*/include",
                "/opt/nvshmem/include",
                "/usr/include/nvshmem_*/"
            ],
            "defines": ["__CUDACC__", "__NVCC__", "CUDA=1"],
            "forcedInclude": ["/usr/local/cuda/include/cuda_runtime.h"],
            "compilerPath": "/usr/local/cuda/bin/nvcc",
            "cStandard": "c11",
            "cppStandard": "c++14",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}
